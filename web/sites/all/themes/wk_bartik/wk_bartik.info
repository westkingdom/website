name = West Kingdom Responsive Bartik
description = A flexible, recolorable theme with many regions and a responsive, mobile-first layout.
base theme = 'responsive_bartik'
version = 0.1
core = 7.x

screenshot = wk_bartik_screenshot.png

stylesheets[all][] = css/wk_bartik.css
stylesheets[all][] = css/colors.css

regions[header] = Header
regions[help] = Help
regions[page_top] = Page top
regions[page_bottom] = Page bottom
regions[highlighted] = Highlighted

regions[featured] = Featured
regions[content] = Content
regions[sidebar_first] = Sidebar first
regions[sidebar_second] = Sidebar second

regions[triptych_first] = Triptych first
regions[triptych_middle] = Triptych middle
regions[triptych_last] = Triptych last

regions[footer_firstcolumn] = Footer first column
regions[footer_secondcolumn] = Footer second column
regions[footer_thirdcolumn] = Footer third column
regions[footer_fourthcolumn] = Footer fourth column
regions[footer] = Footer

settings[shortcut_module_link] = 0

asset_areas[header][title] = Header
asset_areas[header][selector] = .page-with-background #header .section, .borderless-page #header
asset_areas[main-menu-wrapper][title] = Main menu - wrapper
asset_areas[main-menu-wrapper][selector] = #main-menu ul li
asset_areas[main-menu-wrapper][media-wrapper] = @media all and (min-width: 901px)
asset_areas[main-menu-link][title] = Main menu - link
asset_areas[main-menu-link][selector] = #main-menu ul li a, #main-menu ul li a:link, #main-menu ul li a:visited, #main-menu ul li a:hover
asset_areas[main-menu-link][media-wrapper] = @media all and (min-width: 901px)
asset_areas[background][title] = Background
asset_areas[background][selector] = body.page-with-background
asset_areas[page][title] = Page area
asset_areas[page][selector] = #page-inner
asset_areas[edge_l][title] = Left edge
asset_areas[edge_l][selector] = .page-with-background #edge_l
asset_areas[edge_r][title] = Right edge
asset_areas[edge_r][selector] = .page-with-background #edge_r
asset_areas[supporter_l][title] = Left Supporter
asset_areas[supporter_l][selector] = .page-with-background #supporter_l
asset_areas[supporter_r][title] = Right Supporter
asset_areas[supporter_r][selector] = .page-with-background #supporter_r
