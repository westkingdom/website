  global $user;
  $block = array();

  switch ($delta) {
    case 'wk_related_sites':
      $content = '';
      $parent_terms = regnum_domain_parent_term_list();
      if (!empty($parent_terms)) {
        $parent_term_list = wk_branch_site_label_list(array_reverse($parent_terms), array("class" => "site-arms"));
