  // objects from the database, keyed by their $eid.
  $addresses = multiple_email_load_addresses($account->uid);
  unset($addresses[0]);
  foreach ($addresses as $eid => $mmail_record) {
    $address = $mmail_record->email;
    if (substr($address, -15) == 'westkingdom.org') {
      return $mmail_record;
    }
  }
  return FALSE;
}

